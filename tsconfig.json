{
  "compilerOptions": {
    "jsx": "preserve", // Enable JSX
    "module": "commonjs", // Use CommonJS modules
    "target": "es5", // Target ES5 (or later)
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Include DOM and ESNext libraries
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables CommonJS/AMD/UMD modules to be compatible with ES6 modules
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
